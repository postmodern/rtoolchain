# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/rtoolchain/version.rb'

Hoe.new('rtoolchain', RToolchain::VERSION) do |p|
  p.rubyforge_name = 'rtoolchain'
  p.author = 'Postmodern Modulus III'
  p.email = 'postmodern.mod3@gmail.com'
  p.summary = 'RToolchain is a Ruby interface to various toolchains and other compilers or assemblers'
  p.description = p.paragraphs_of('README.txt', 2..5).join("\n\n")
  p.url = p.paragraphs_of('README.txt', 0).first.split(/\n/)[1..-1]
  p.changes = p.paragraphs_of('History.txt', 0..1).join("\n\n")
end

# vim: syntax=Ruby
